{
	"name": "web-tp3/cal",
	"description": "A calendar combining all the functions of the existing calendar extensions plus adding some new features. It is based on the ical standard",
	"type": "typo3-cms-extension",
	"version": "2.5.3",
	"license": [
		"GPL-2.0-or-later"
	],
	"authors": [
		{
			"name": "Jan Helke",
			"email": "cal@typo3.helke.de",
			"homepage": "https://helke.de"
		},
		{
			"name": "Mario Matzulla",
			"email": "mario@matzullas.de",
			"homepage": "https://www.matzullas.de/"
		},
		{
			"name": "Thomas Ruta",
			"email": "email@thomasruta.de",
			"homepage": "https://www.thomasruta.de/"
		}
	],
	"require": {
		"typo3/cms-core": "^8.7.13 || ^9.5.0",
		"sjbr/static-info-tables": "^6.7"
	},
	"require-dev": {
		"editorconfig-checker/editorconfig-checker": "^8.0",
		"friendsofphp/php-cs-fixer": "^2.13",
		"web-tp3/cag_tests": "^1.2",
		"phpunit/phpunit": "*",
		"roave/security-advisories": "@dev",
		"helhum/typo3-console": "^5"

	},
	"suggest": {
		"friendsoftypo3/typo3db-legacy": "^1.1",
		"friendsoftypo3/tt-address": "~4",
		"georgringer/news": "^7",
		"reelworx/rx-shariff": "~12",
		"bk2k/bootstrap-package": "^8"

	},
	"autoload": {
		"psr-4": {
			"TYPO3\\CMS\\Cal\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"TYPO3\\CMS\\Cal\\Tests\\": "Tests"
		}
	},
	"replace": {
		"typo3-ter/cal": "self.version",
		"janhelke/cal": "self.version",
		"web-tp3/cal": "self.version"
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"scripts": {
		"typo3-cms-scripts": [
			"typo3cms install:fixfolderstructure",
			"typo3cms install:generatepackagestates"
		],
		"post-autoload-dump": [
			"@typo3-cms-scripts"
		],
		"test:php:unit": [
			"@php -v",
			"@php bin/phpunit -c Tests/Build/UnitTests.xml"
		],
		"test:php:func": [
			"@php -v",
			"@php bin/phpunit -c Tests/Build/FunctionalTests.xml"
		]
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "cal"
		}
	}
}
